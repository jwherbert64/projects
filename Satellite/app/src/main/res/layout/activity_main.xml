<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="jwherbert64.satellite.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/darker_background">

        <Button
            android:text="Submit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/text_color"
            android:background="@color/dark_background"
            android:id="@+id/b_submit" />

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="numberDecimal"
        android:hint="Longitude"
        android:ems="10"
        android:textSize="16dp"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:textColorHint="@color/text_color"
        android:background="#FFFFFF"
        android:id="@+id/et_lon" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="numberDecimal"
        android:hint="Latitude"
        android:ems="10"
        android:textSize="16dp"
        android:gravity="center"
        android:textColorHint="@color/text_color"
        android:textColor="@color/text_color"
        android:background="#FFFFFF"
        android:id="@+id/et_lat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/darker_background">

        <TextView
            android:text="Last Update: 2017-02-15"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/dark_background"
            android:textColor="@color/text_color"
            android:textSize="16dp"
            android:id="@+id/tv_date"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/ll_sat">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="20dp"
            android:background="@color/darker_background">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:src="@drawable/satellite"
                android:background="@color/lighter_background"
                android:id="@+id/iv_sat"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
