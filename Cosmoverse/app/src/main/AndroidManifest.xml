<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jwherbert64.cosmoverse">

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AppActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UniverseInfoActivity"></activity>
        <activity android:name=".StarInfoActivity"></activity>
        <activity android:name=".PlanetInfoActivity"></activity>
        <activity android:name=".GalaxyInfoActivity"></activity>
        <activity android:name=".GalleryActivity"></activity>
        <activity android:name=".ImageActivity"></activity>
    </application>

</manifest>