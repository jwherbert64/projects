<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/light_background"
    tools:context="jwherbert64.weather.MainActivity">


    <LinearLayout
        android:id="@+id/ll_cont"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="@color/darker_background"
        android:weightSum="2">

        <TextView
            android:id="@+id/tv_city"
            android:text="Sydney, AU"
            android:textSize="32dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/dark_background"
            android:textColor="@color/text_color"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_temp"
            android:text="18 Degrees"
            android:textSize="32dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/dark_background"
            android:textColor="@color/text_color"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bar"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/background"
        android:layout_below="@+id/ll_cont"
        android:orientation="vertical"/>

    <LinearLayout
        android:id="@+id/ll_thumb"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_below="@id/ll_bar"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:background="@color/darker_background">

        <ImageView
            android:id="@+id/iv_thumb"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@color/lighter_background"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_con"
        android:text="Condition"
        android:textSize="16sp"
        android:layout_below="@+id/ll_thumb"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"/>

    <TextView
        android:id="@+id/tv_wind"
        android:text="Wind"
        android:textSize="16sp"
        android:layout_below="@+id/tv_con"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"/>

    <TextView
        android:id="@+id/tv_clouds"
        android:text="Clouds"
        android:textSize="16sp"
        android:layout_below="@+id/tv_wind"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"/>

    <TextView
        android:id="@+id/tv_pressure"
        android:text="Pressure"
        android:textSize="16sp"
        android:layout_below="@+id/tv_clouds"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"/>

    <TextView
        android:id="@+id/tv_humid"
        android:text="Humidity"
        android:textSize="16sp"
        android:layout_below="@+id/tv_pressure"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"/>

    <TextView
        android:id="@+id/tv_rise"
        android:textSize="16sp"
        android:layout_below="@+id/tv_humid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"/>

    <TextView
        android:id="@+id/tv_set"
        android:textSize="18sp"
        android:layout_below="@+id/tv_rise"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"/>

    <LinearLayout
        android:id="@+id/ll_date"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@color/darker_background">
        <TextView
            android:id="@+id/tv_date"
            android:text="Date"
            android:textSize="24sp"
            android:background="@color/dark_background"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/text_color"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/background"
        android:layout_above="@+id/ll_date"/>

</RelativeLayout>
